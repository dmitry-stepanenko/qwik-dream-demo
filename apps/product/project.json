{
  "name": "product",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/product/src",
  "targets": {
    "build": {
      "options": {
        "outputPath": "dist/apps/product",
        "configFile": "apps/product/vite.config.ts"
      },
      "executor": "@nrwl/vite:build"
    },
    "build-ssr": {
      "defaultConfiguration": "preview",
      "options": {
        "outputPath": "dist/apps/product"
      },
      "configurations": {
        "preview": {
          "ssr": "src/entry.preview.tsx"
        },
        "cloudflare-pages": {
          "configFile": "apps/product/adaptors/cloudflare-pages/vite.config.ts"
        }
      },
      "executor": "@nrwl/vite:build",
      "dependsOn": [
        "build"
      ]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview --port 5004",
        "cwd": "apps/product"
      },
      "dependsOn": [
        "build-ssr"
      ]
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "product:build",
        "mode": "ssr",
        "port": 5004
      },
      "configurations": {
        "development": {
          "buildTarget": "product:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "product:build:production",
          "hmr": false
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/product/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "deploy": {
      "executor": "@k11r/nx-cloudflare-wrangler:deploy-page",
      "options": {
        "dist": "dist/apps/product/client"
      }
    },
    "preview-cloudflare-pages": {
      "executor": "@k11r/nx-cloudflare-wrangler:serve-page",
      "options": {
        "dist": "dist/apps/product/client"
      }
    }
  },
  "tags": []
}
