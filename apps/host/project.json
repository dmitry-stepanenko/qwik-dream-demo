{
  "name": "host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/host/src",
  "targets": {
    "build": {
      "options": {
        "outputPath": "dist/apps/host",
        "configFile": "apps/host/vite.config.ts"
      },
      "executor": "@nrwl/vite:build"
    },
    "build.preview": {
      "options": {
        "outputPath": "dist/apps/host",
        "configFile": "apps/host/vite.preview.config.ts"
      },
      "executor": "@nrwl/vite:build",
      "dependsOn": ["build"]
    },
    "build.cloudflare-pages": {
      "options": {
        "outputPath": "dist/apps/host",
        "configFile": "apps/host/vite.cloudflare-pages.config.ts"
      },
      "executor": "@nrwl/vite:build",
      "dependsOn": ["build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview --port 5001",
        "cwd": "apps/host"
      },
      "dependsOn": ["build.preview"]
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "host:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "host:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "host:build:production",
          "hmr": false
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/host/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "preview-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
						"command": "nx preview cart",
						"color": "blue",
						"prefix": "CART    |"
					},
					{
						"command": "nx preview hero",
						"color": "cyan",
						"prefix": "HERO    |"
					},
					{
						"command": "nx preview host",
						"color": "green",
						"prefix": "HOST    |"
					},
					{
						"command": "nx preview menu",
						"color": "magenta",
						"prefix": "MENU    |"
					},
					{
						"command": "nx preview product",
						"color": "red",
						"prefix": "PRODUCT |"
					},
					{
						"command": "nx preview reviews",
						"color": "yellow",
						"prefix": "REVIEWS |"
					}
        ],
        "parallel": true
      }
    }
  },
  "tags": []
}
